generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
  output   = "../lib/prisma/generated/prisma"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model UserContact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fullname      String
  email     String   @unique
  typemessage     String
  message String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EarlyAccessRequest {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName     String
  lastName      String
  email         String   @unique
  phone         String
  city          String
  poolType      String
  sensorOption  String
  experience    String
  motivation    String
  acceptedTerms Boolean
  createdAt     DateTime @default(now())
}
